{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--browser",
        "chrome",
        "--executable-path",
        "C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe",
        "--user-data-dir",
        "C:\\Users\\{username}\\AppData\\Local\\Google\\Chrome\\User Data"
      ]
    }
  }
}
